{{#each this}}
<div class="project{{#if_even @index}} left{{/if_even}}{{#if_odd @index}} right{{/if_odd}}{{#if browserPreviewOnly}} browser-preview-only{{/if}}">
    <!-- <div class="background"></div> -->
    <div class="wrapper">
        <div class="mockups">
            <div class="outline"></div>

            {{#if mobileImageUrl}}
            {{#if_odd @index}}
            <div class="phone small">
                <div class="base">
                    <div class="status one"></div>
                    <div class="status two"></div>
                    <div class="lens"></div>
                    <div class="bezel">
                        <div class="screen">
                            <img class="lazy" src="images/transparent.gif" data-original="{{mobileImageUrl}}"/>
                        </div>
                    </div>
                </div>
            </div>
            {{/if_odd}}
            {{/if}}
            <div class="browser">
                <div class="base">
                    <div class="buttons"></div>
                    <div class="tab"></div>
                    <div class="menubar">
                        <div class="locationbar"></div>
                        <div class="hamburger"></div>
                    </div>
                    <div class="viewport">
                        <div class="frame">
                            <img class="lazy" src="images/transparent.gif" data-original="{{browserImageUrl}}"/>
                        </div>
                    </div>
                </div>
            </div>
            {{#if mobileImageUrl}}
            {{#if_even @index}}
            <div class="phone small">
                <div class="base">
                    <div class="status one"></div>
                    <div class="status two"></div>
                    <div class="lens"></div>
                    <div class="bezel">
                        <div class="screen">
                            <img class="lazy" src="images/transparent.gif" data-original="{{mobileImageUrl}}"/>
                        </div>
                    </div>
                </div>
            </div>
            {{/if_even}}
            {{/if}}
        </div>
        <div class="text">
            <h3>{{title}}</h3>
            <p class="tagline">{{tagline}}</p>
            <p class="role">Role: {{role}}</p>
            {{#if tags}}
            <ul class="tags">
                {{#each tags}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
            {{description}}
            <div class="button-wrapper">
            <a rel="nofollow" href="{{link}}" class="button">Visit Site</a></div>
        </div>
    </div>
</div>
{{#ifCond title '==' 'Line Posters'}}
